<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.graduation.dao.mapper.OrderMapper">
    <resultMap id="BaseResultMap" type="com.graduation.domain.bo.OrderBO" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="order_id" property="orderId" jdbcType="BIGINT" />
        <result column="category_id" property="categoryId" jdbcType="BIGINT" />
        <result column="user_id" property="userId" jdbcType="BIGINT" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="mobile" property="mobile" jdbcType="BIGINT" />
        <result column="receive_addr" property="receiveAddr" jdbcType="VARCHAR" />
        <result column="num" property="num" jdbcType="INTEGER" />
        <result column="total_price" property="totalPrice" jdbcType="DECIMAL" />
        <result column="order_status" property="orderStatus" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="BIGINT" />
        <result column="modify_time" property="modifyTime" jdbcType="BIGINT" />
        <result column="pay_time" property="payTime" jdbcType="BIGINT" />
        <result column="cancel_time" property="cancelTime" jdbcType="BIGINT" />
    </resultMap>
    <sql id="Base_Column_List">
        id,order_id,category_id,user_id,username,mobile,receive_addr,num,total_price,order_status,create_time,modify_time,pay_time,cancel_time
    </sql>
    <sql id="select_condition">
        <trim prefix="where" prefixOverrides="and" suffixOverrides=",">
            <include refid="if_sql"></include>
        </trim>
    </sql>
    <sql id="if_sql">
        <if test="orderId != null">
            order_id,
        </if>
        <if test="categoryId != null">
            category_id,
        </if>
        <if test="userId != null">
            user_id,
        </if>
        <if test="username != null">
            username,
        </if>
        <if test="num != null">
            num,
        </if>
        <if test="createTime != null">
            create_time,
        </if>
        <if test="payTime != null">
            pay_time,
        </if>
        <if test="cancelTime != null">
            cancel_time,
        </if>
        <if test="modify_time != null">
            modify_time,
        </if>
    </sql>
    <insert id="saveOrder">
        insert INTO
        car_rental_order(order_id,category_id,user_id,username,mobile,receive_addr,num,total_price,create_time)
        VALUE
        (#{orderId,jdbcType=BIGINT},#{categoryId,jdbcType=BIGINT},#{userId,jdbcType=BIGINT},
        #{username,jdbcType=VARCHAR}, #{num,jdbcType=INTEGER},#{totalPrice,jdbcType=DECIMAL},#{createTime,jdbcType=BIGINT},)
    </insert>
    <!--支付-->
    <update id="payOrder">
        update car_rental_order
        set
        order_status = 1,
        modify_time=#{modifyTime,jdbcType=BIGINT},
        pay_time=#{payTime,jdbcType=BIGINT}
        where
        order_id=#{orderId,jdbcType=BIGINT}
        and
        pay_time is null
    </update>
    <!--取消订单-->
    <update id="cancelOrder">
      update car_rental_order
      SET
      order_status = #{orderStatus,jdbcType=INTEGER},
      modify_time=#{modifyTime,jdbcType=BIGINT},
      cancel_time=#{cancelTime,jdbcType=BIGINT}
      where
      order_id=#{orderId,jdbcType=BIGINT}
      and
      cancel_time is null

    </update>

    <select id="queryOrder" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from car_rental_order
        where
        <include refid="select_condition"/>
    </select>
</mapper>